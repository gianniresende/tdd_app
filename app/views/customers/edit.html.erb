<% if @customer.errors.any? %>
  <ul>
    <% @customer.errors.full_messages.each do |message|%>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<h1><%= t("Edit Client")%></h1>

<%= form_for( @customer ) do |f| %>
  <div>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div>
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>
    <div>
      <%= f.label :avatar %>
      <%= f.file_field :avatar %>
    </div>
    <div>
      <%= f.label :smoker %><br>
      <% { 'S': 'Sim', 'N': 'NÃ£o' }.each do |key, value| %>
      <%= f.radio_button :smoker, key %><%= value %><br>
      <% end %>
    </div>
    <%= f.submit t("Update Client") %>
  </div>
<% end %>